<table>
  <% if line_item == @current_item %>
    <tr id="current_item">
  <% else %>
    <tr>
  <% end %>
  <tr>
    <td><%= line_item.quantity %>&times;</td>
    <td><%= line_item.product.title %></td>
    <td><%= number_to_currency(line_item.total_price, :unit => 'INR ') %></td>
  </tr>
</table>
