<h1>Listing orders</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Mobile</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.name %></td>
      <td><%= order.address %></td>
      <td><%= order.email %></td>
      <td><%= order.mobile %></td>
      <td><%= link_to 'Show', order %></td>
      <td><%= link_to 'Destroy', order, confirm: 'Are you sure?',
        method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>


