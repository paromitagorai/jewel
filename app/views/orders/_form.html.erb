<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for order, :html => { class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control",placeholder: "Enter your Name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :address %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :address, class: "form-control",placeholder: "Enter your address" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :email, class: "form-control",placeholder: "Enter your email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :mobile %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :mobile, class: "form-control",placeholder: "Enter your mobile number" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="actions">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


